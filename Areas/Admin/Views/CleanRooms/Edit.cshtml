@model CleanroomMonitoring.Web.Models.CleanRoom

@{
    ViewData["Title"] = "Edit Clean Room";
    // Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h2>Edit Clean Room</h2>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Clean Room Details</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RoomID" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="CreatedByUserID" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="RoomName" class="control-label">Room Name <span class="text-danger">*</span></label>
                            <input asp-for="RoomName" class="form-control" required />
                            <span asp-validation-for="RoomName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FactoryID" class="control-label">Factory</label>
                            <select asp-for="FactoryID" class="form-control" asp-items="ViewBag.FactoryID">
                                <option value="">-- Select Factory --</option>
                            </select>

                            <span asp-validation-for="FactoryID" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Area" class="control-label">Area</label>
                            <input asp-for="Area" class="form-control" />
                            <span asp-validation-for="Area" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CleanRoomClass" class="control-label">Clean Room Class</label>
                            <select asp-for="CleanRoomClass" class="form-control" asp-items="ViewBag.CleanRoomClasses">
                                <option value="">-- Select Class --</option>
                            </select>
                            <span asp-validation-for="CleanRoomClass" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="COMMENT" class="control-label">Comments</label>
                    <textarea asp-for="COMMENT" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="COMMENT" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fa fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}