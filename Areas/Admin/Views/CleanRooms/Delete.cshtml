@model CleanroomMonitoring.Web.Models.CleanRoom

@{
    ViewData["Title"] = "Delete Clean Room";
    // Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h2>Delete Clean Room</h2>

    <div class="alert alert-danger">
        <h3>Are you sure you want to delete this clean room?</h3>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@Model.RoomName</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Room Name:</dt>
                <dd class="col-sm-9">@Model.RoomName</dd>

                <dt class="col-sm-3">Factory:</dt>
                <dd class="col-sm-9">@(Model.Factory?.FactoryName ?? "Not Assigned")</dd>

                <dt class="col-sm-3">Area:</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Area) ? "N/A" : Model.Area)</dd>

                <dt class="col-sm-3">Clean Room Class:</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.CleanRoomClass) ? "N/A" : Model.CleanRoomClass)</dd>

                <dt class="col-sm-3">Created Date:</dt>
                <dd class="col-sm-9">@(Model.CreatedDate?.ToString("yyyy-MM-dd HH:mm") ?? "N/A")</dd>

                <dt class="col-sm-3">Description:</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "N/A" : Model.Description)</dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="RoomID" />
                <button type="submit" class="btn btn-danger">
                    <i class="fa fa-trash"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Back to List
                </a>
            </form>
        </div>
    </div>
</div>