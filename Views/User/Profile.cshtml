@model CleanroomMonitoring.Web.ViewModels.UserProfileViewModel
@{
    ViewData["Title"] = "User Profile";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Profile Information</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <img src="https://via.placeholder.com/150" alt="@Model.Username" class="img-thumbnail" />
                    </div>
                    <div class="col-md-8">
                        <dl class="row">
                            <dt class="col-sm-4">Username:</dt>
                            <dd class="col-sm-8">@Model.Username</dd>

                            <dt class="col-sm-4">Full Name:</dt>
                            <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">@Model.Email</dd>

                            <dt class="col-sm-4">Department:</dt>
                            <dd class="col-sm-8">@Model.Department</dd>
                        </dl>
                    </div>
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Edit" asp-route-id="@Model.UserID" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit Profile
                    </a>
                    <a asp-action="ChangePassword" class="btn btn-secondary">
                        <i class="bi bi-shield-lock"></i> Change Password
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Activity</h5>
            </div>
            <div class="card-body">
                <p>Last Login: [Date]</p>
                <p>Password Expiry: [Date]</p>
                <!-- Thêm các thông tin hoạt động khác nếu cần -->
            </div>
        </div>
    </div>
</div>