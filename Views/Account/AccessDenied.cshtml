@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4><i class="bi bi-exclamation-triangle-fill me-2"></i>Access Denied</h4>
            </div>
            <div class="card-body text-center">
                <h5 class="mb-4">You do not have permission to access this resource.</h5>
                <p>You either need to log in or your account does not have the appropriate permissions.</p>
                <div class="mt-4">
                    <a asp-area="" asp-controller="Dashboard" asp-action="Index" class="btn btn-primary me-2">
                        <i class="bi bi-house-door me-1"></i>Go to Dashboard
                    </a>
                    <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-outline-primary">
                        <i class="bi bi-box-arrow-in-right me-1"></i>Log in
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>