@model CleanroomMonitoring.Web.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
 
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4>Log in</h4>
            </div>
            <div class="card-body">
                <!-- Validation summary for model-level errors -->
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <!-- Optional: Display ModelState errors for debugging (remove in production) -->
                @if (ViewData["ValidationErrors"] != null) {
                    <div class="alert alert-danger">
                        <strong>Validation Errors:</strong> @ViewData["ValidationErrors"]
                    </div>
                }

                <form asp-controller="Account" asp-action="Login"  method="post">
                 @*    @Html.AntiForgeryToken()  *@
               @*      <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>

                    <div class="mt-3 text-center">
                        <p>Don't have an account? <a asp-action="Register">Register</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
 